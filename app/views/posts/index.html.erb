<div class="d-flex">
  <section class="left-section col-3">
    <%= avatar_for(current_user) %>
    <%= current_user.username %>
    <div id="count" class = "d-flex">
    <div>
      <p class="whiter"><%= current_user.following.count %></p>
      <h6>following</h6>
    </div>
    <div>
      <span> <%# pluralize(current_user.following.count, 'following', class="whiter") %> </span>
      <span> <%= pluralize(current_user.followers.count, 'follower') %> </span>
    </div>
    </div>
    <div>
      <ul>
        <li><%= link_to 'Home' %></li>
        <li><%= link_to 'Connect'%></li>
        <li><%= link_to 'Discover'%></li>
        <li><%= link_to 'Profile', current_user %></li>
        <li><%= link_to 'Statistics'%></li>
      </ul>
    </div>
  </section>
  <section class="col-9">
      <h1></h1>
    <%= render 'form' %>
    <% @posts.each do |post| %>
      <div>
        <b><%= post.user.username %></b>
        <%= post.body %>
      </div>
      <% end %>
      <div>
        <h4>Who to follow</h4>
        <% @users.each do |user| %>
          <ul>
            <li><%= link_to user.username, user %></li>
          </ul>
        <% end %>
      </div>
  </section>
</div>