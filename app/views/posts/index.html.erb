<h1>Football rumours</h1>
<%= render 'form' %>
<% @posts.each do |post| %>
  <div>
    <b><%= post.user.username %></b>
    <%= post.body %>
  </div>
  <% end %>
  <div>
    <h4>Who to follow</h4>
    <% @users.each do |user| %>
      <ul>
        <li><%= link_to user.username, user %></li>
      </ul>
    <% end %>
  </div>